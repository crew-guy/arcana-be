{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "pwa-node",
        "request": "launch",
        "name": "Launch Program",
        "skipFiles": ["<node_internals>/**"],
        "runtimeArgs": ["-r", "ts-node/register"],
        "runtimeExecutable": "nodemon",
        "args": ["-e", "ts", "${workspaceFolder}/src/index.ts"],
        "outputCapture": "std",
        "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
        ],
        "console": "integratedTerminal"
      }
    ]
  }